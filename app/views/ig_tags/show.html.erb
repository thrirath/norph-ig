			<div class="container" id="column">


				<!-- 1 Tab -->
			<% unless @media_to_show.count == 0 %>
			<% @media_to_show.each do |media| %>
				<div class="messagebox">
					<div class="header">
						<%= image_tag media.user.profile_picture, class: 'avartar'  %>
						<span class="header-text">
							<%= media.user.username %>
						</span>
						<div class="right-side instagram"></div> 
						<div class="right-side font10">
							<%= time_ago_in_words DateTime.strptime( media.created_time, '%s') %>
						</div>
					</div>
					<hr class="header-line">
					<div class="data">
						<div class="media">
							<%= image_tag media.images.low_resolution.url, class: 'img-content' %>
						</div>

						<div class="text">
							<%= media.caption.text unless media.caption == nil %><br>
							<%= link_to 'view', media.link %>
						</div>
					</div>
				</div>
			<% end %>
			<% end %>

