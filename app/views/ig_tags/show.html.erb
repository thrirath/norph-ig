		<script>
		$(document).ready(function()
		{
			OnLoad()

			$("#Searchbox").focus()
			$(".show-hide-btn").click(function(){		
				$("#filter-bar").toggle("Normal")
				$("#plus-btn").toggle()
				$("#minus-btn").toggle()
			})

			$("#removesearch").click(function()
			{	
				$("#Searchbox").focus()
				$("#Searchbox").val("")
			})
		})

		function OnLoad()
		{
			$("#plus-btn").hide()
		}
		</script>
		<script>
			$(document).ready(function()
			{
				$("#Searchbox").keyup(function(){
					$("#search_tags").html( "<a class='search-link' href='/search/"+$("#Searchbox").val()+"' ><span class='rightsearch glyphicon glyphicon-search'></span></a>" )
				});
			});
		</script>

